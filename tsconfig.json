{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "strict": false,
    "lib": [
      "dom",
      "es2017",
      "es2019",
      "es2020",
      // Intl is polyfilled in `global.ts` entrypoint
      "esnext.intl",
      "es2017.intl",
      "es2018.intl"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2019",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    // "noImplicitAny": true,
    "types": ["resize-observer-browser"]
  },
  "include": ["src", "types/jsx.d.ts"],
  "exclude": ["node_modules"]
}
